{
  "name": ":vendor/:package_name",
  "type": "library",
  "description": ":package_description",
  "keywords": [
    ":vendor",
    ":package_name"
  ],
  "homepage": "https://github.com/:vendor/:package_name",
  "license": "MIT",
  "authors": [
    {
      "name": ":author_name",
      "email": ":author_email",
      "homepage": ":author_website",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "phpstan/phpstan": "^0.12",
    "roave/security-advisories": "dev-master",
    "symplify/easy-coding-standard-prefixed": "^8.0"
  },
  "autoload": {
    "psr-4": {
      ":vendor\\:package_name\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      ":vendor\\:package_name\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "codestyle": "ecs check --ansi",
    "lint": "phpstan analyze --memory-limit=512M --ansi"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
